#include <iostream>
using namespace std;

int main() {
   int n,r,res=1;
   cout<<"enter the no of people \n";
   cin>>n;
   cout<<"enter the no of seats \n";
   cin>>r;
   for(int i=r;i<=n;i++)
   {
       res = res*i;
   }
   cout<<"no of possibilities is \n"<<res;
}


