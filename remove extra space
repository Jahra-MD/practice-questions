// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
void RemoveExtraSpace(string str,int len)
{
    for(int i=0;i<len;i++)
    {   if(str[i]==' ' && str[i+1]==' ')
        {
            i=i+1;
        }
        cout<<str[i];
    }
}

int main() {
    string str="hi smitch  how  are  you";
    int len =str.length();
    RemoveExtraSpace(str,len);
}


